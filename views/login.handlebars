<form class="login-form mt-3 bg-secondary border border-dark rounded">
  <div>
    <label for="email-login">Email:</label>
    <input type="text" id="email-login" class="form-control"/>
  </div>
  <div>
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" class="form-control"/>
  </div>
  <div>
    <button type="submit" class="btn btn-dark">Login</button>
  </div>
</form>

<form class="signup-form mt-3 bg-secondary border border-dark rounded">
  <div>
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup" class="form-control" />
  </div>
  <div>
    <label for="email-signup">Email:</label>
    <input type="text" id="email-signup" class="form-control"/>
  </div>
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" class="form-control"/>
  </div>
