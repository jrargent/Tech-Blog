<article class="mt-3 bg-secondary border border-dark rounded">
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
        <label for="post-title">Title</label>
      <input name="post-title" type="text" value="{{post.title}}" class="form-control"/>
      <label for="post-contents">Contents</label>
      <input name="post-contents" type="text" value="{{post.post_contents}}" class="form-control form-control-lg" />
    </div>
    <div>
       by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-dark">Save post</button>
    <button type="button" class="delete-post-btn btn btn-dark">Delete post</button>
  </form>

<form class="comment-form">
  <div>
    <textarea name="comment-body" class="form-control"></textarea>
  </div>

  <div>
    <button type="submit" class="btn btn-dark">Add Comment</button>
  </div>
</form>

{{> comments post.comments}}

</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>