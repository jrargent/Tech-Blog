<article class="post mt-3 bg-secondary border border-dark rounded">
  <div class="title bg-dark text-white">
    <h1>{{title}}</h1>
    </div>
    <div>
    <h2>{{post_contents}}</h2>
  </div>
  <div class="meta">
   by {{user.username}} on {{format_date created_at}}
  |
  <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</div>
</article>